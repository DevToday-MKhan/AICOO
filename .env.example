# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders,read_customers,write_customers,read_inventory,write_inventory,read_price_rules,write_price_rules,read_discounts,write_discounts
SHOPIFY_APP_URL=https://your-app.railway.app
SHOPIFY_API_VERSION=2024-10

# Database (if using Prisma with PostgreSQL/MySQL)
DATABASE_URL=your_database_url_here

# OpenAI GPT Integration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Railway Backend Service
RAILWAY_API_URL=https://your-backend.railway.app

# Session Storage
SESSION_SECRET=your_random_session_secret_here

# Environment
NODE_ENV=production
