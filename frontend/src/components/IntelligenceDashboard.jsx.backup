import { useEffect, useState } from 'react';
import { getColors, shadows, animations, transitions } from '../styles/theme';

/**
 * AICOO Intelligence Layer - Modern, Animated UI
 * Daily Snapshot, Trends, and ZIP Distribution with gradients and animations
 */
export default function IntelligenceDashboard() {
  const [daily, setDaily] = useState(null);
  const [trends, setTrends] = useState(null);
  const [zipDist, setZipDist] = useState([]);
  const [predictions, setPredictions] = useState(null);
  const [loading, setLoading] = useState(true);
  const [counters, setCounters] = useState({ orders: 0, deliveries: 0, cost: 0 });
  const colors = getColors(document.documentElement.getAttribute('data-theme') || 'light');

  useEffect(() => {
    fetchIntelligence();
    const interval = setInterval(fetchIntelligence, 60000); // Refresh every 60s
    return () => clearInterval(interval);
  }, []);

  const fetchIntelligence = async () => {
    try {
      const [dailyRes, trendsRes, zipRes, analyticsRes] = await Promise.all([
        fetch('/api/analytics/daily'),
        fetch('/api/analytics/trends'),
        fetch('/api/analytics/zip'),
        fetch('/api/analytics')
      ]);

      const dailyData = await dailyRes.json();
      const trendsData = await trendsRes.json();
      const zipData = await zipRes.json();
      const analyticsData = await analyticsRes.json();

      setDaily(dailyData);
      setTrends(trendsData);
      setZipDist(zipData);
      setPredictions(analyticsData.predictions);
      setLoading(false);
    } catch (err) {
      console.error('Failed to fetch intelligence:', err);
      setLoading(false);
    }
  };

  if (loading) {
    return (
      <div style={{
        background: colors.cardBg,
        border: `1px solid ${colors.borderColor}`,
        borderRadius: '12px',
        padding: '24px',
        textAlign: 'center',
        color: colors.textSecondary
      }}>
        Loading AICOO Intelligence...
      </div>
    );
  }

  const getHotnessColor = (hotness) => {
    if (hotness > 10) return '#ef4444'; // red - very hot
    if (hotness > 5) return '#f59e0b'; // amber - hot
    if (hotness > 2) return '#10b981'; // green - warm
    return '#6b7280'; // gray - cold
  };

  return (
    <div style={{ display: 'flex', flexDirection: 'column', gap: '20px' }}>
      {/* Daily Snapshot */}
      <div style={{
        background: colors.cardBg,
        border: `1px solid ${colors.borderColor}`,
        borderRadius: '12px',
        padding: '24px'
      }}>
        <h3 style={{
          margin: '0 0 20px 0',
          fontSize: '20px',
          fontWeight: 'bold',
          color: colors.textPrimary,
          display: 'flex',
          alignItems: 'center',
          gap: '10px'
        }}>
          üß† AICOO Intelligence ‚Äì Daily Snapshot
        </h3>

        {daily && (
          <div>
            {/* Key Metrics Grid */}
            <div style={{
              display: 'grid',
              gridTemplateColumns: 'repeat(auto-fit, minmax(200px, 1fr))',
              gap: '16px',
              marginBottom: '24px'
            }}>
              <div style={{
                background: colors.bg,
                padding: '16px',
                borderRadius: '8px',
                borderLeft: '4px solid #3b82f6'
              }}>
                <div style={{ fontSize: '12px', color: colors.textSecondary, marginBottom: '4px' }}>
                  Total Orders Today
                </div>
                <div style={{ fontSize: '28px', fontWeight: 'bold', color: '#3b82f6' }}>
                  {daily.orders?.today || 0}
                </div>
              </div>

              <div style={{
                background: colors.bg,
                padding: '16px',
                borderRadius: '8px',
                borderLeft: '4px solid #10b981'
              }}>
                <div style={{ fontSize: '12px', color: colors.textSecondary, marginBottom: '4px' }}>
                  Total Deliveries
                </div>
                <div style={{ fontSize: '28px', fontWeight: 'bold', color: '#10b981' }}>
                  {daily.deliveries?.today || 0}
                </div>
              </div>

              <div style={{
                background: colors.bg,
                padding: '16px',
                borderRadius: '8px',
                borderLeft: '4px solid #f59e0b'
              }}>
                <div style={{ fontSize: '12px', color: colors.textSecondary, marginBottom: '4px' }}>
                  Avg Delivery Cost
                </div>
                <div style={{ fontSize: '28px', fontWeight: 'bold', color: '#f59e0b' }}>
                  ${daily.deliveries?.avgCost?.toFixed(2) || '0.00'}
                </div>
              </div>

              <div style={{
                background: colors.bg,
                padding: '16px',
                borderRadius: '8px',
                borderLeft: '4px solid #8b5cf6'
              }}>
                <div style={{ fontSize: '12px', color: colors.textSecondary, marginBottom: '4px' }}>
                  Route Efficiency
                </div>
                <div style={{ fontSize: '28px', fontWeight: 'bold', color: '#8b5cf6' }}>
                  {daily.efficiency || 100}%
                </div>
              </div>
            </div>

            {/* Most Used ZIP */}
            {daily.orders?.topZIPs && daily.orders.topZIPs.length > 0 && (
              <div style={{
                background: colors.bg,
                padding: '16px',
                borderRadius: '8px',
                marginBottom: '16px'
              }}>
                <div style={{ fontSize: '14px', fontWeight: '600', marginBottom: '8px', color: colors.textPrimary }}>
                  üìç Top ZIP Codes
                </div>
                <div style={{ display: 'flex', gap: '12px', flexWrap: 'wrap' }}>
                  {daily.orders.topZIPs.slice(0, 5).map((zip, idx) => (
                    <div key={idx} style={{
                      padding: '8px 12px',
                      background: colors.cardBg,
                      border: `1px solid ${colors.borderColor}`,
                      borderRadius: '6px',
                      fontSize: '13px'
                    }}>
                      <strong>{zip.zip}</strong> ({zip.count} orders)
                    </div>
                  ))}
                </div>
              </div>
            )}

            {/* Warnings */}
            {daily.warnings && daily.warnings.length > 0 && (
              <div style={{
                background: '#fef3c7',
                border: '2px solid #f59e0b',
                borderRadius: '8px',
                padding: '16px',
                marginBottom: '16px'
              }}>
                <div style={{ fontSize: '14px', fontWeight: '600', marginBottom: '8px', color: '#92400e' }}>
                  ‚ö†Ô∏è Warnings
                </div>
                <ul style={{ margin: 0, paddingLeft: '20px', color: '#92400e' }}>
                  {daily.warnings.map((warning, idx) => (
                    <li key={idx} style={{ fontSize: '13px', marginBottom: '4px' }}>{warning}</li>
                  ))}
                </ul>
              </div>
            )}

            {/* Recommendations */}
            {daily.recommendations && daily.recommendations.length > 0 && (
              <div style={{
                background: '#dbeafe',
                border: '2px solid #3b82f6',
                borderRadius: '8px',
                padding: '16px'
              }}>
                <div style={{ fontSize: '14px', fontWeight: '600', marginBottom: '8px', color: '#1e40af' }}>
                  üí° AICOO Recommendations
                </div>
                <ul style={{ margin: 0, paddingLeft: '20px', color: '#1e40af' }}>
                  {daily.recommendations.map((rec, idx) => (
                    <li key={idx} style={{ fontSize: '13px', marginBottom: '4px' }}>{rec}</li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        )}
      </div>

      {/* Trends & Predictions */}
      <div style={{
        background: colors.cardBg,
        border: `1px solid ${colors.borderColor}`,
        borderRadius: '12px',
        padding: '24px'
      }}>
        <h3 style={{
          margin: '0 0 20px 0',
          fontSize: '20px',
          fontWeight: 'bold',
          color: colors.textPrimary,
          display: 'flex',
          alignItems: 'center',
          gap: '10px'
        }}>
          üìà AICOO Insights ‚Äì Trends & Predictions
        </h3>

        {predictions && (
          <div style={{
            display: 'grid',
            gridTemplateColumns: 'repeat(auto-fit, minmax(250px, 1fr))',
            gap: '16px',
            marginBottom: '20px'
          }}>
            <div style={{
              background: colors.bg,
              padding: '16px',
              borderRadius: '8px',
              border: `2px solid #10b981`
            }}>
              <div style={{ fontSize: '12px', color: colors.textSecondary, marginBottom: '8px' }}>
                Predicted Tomorrow Cost
              </div>
              <div style={{ fontSize: '24px', fontWeight: 'bold', color: '#10b981' }}>
                ${predictions.tomorrowCost?.toFixed(2) || '0.00'}
              </div>
              <div style={{ fontSize: '11px', color: colors.textSecondary, marginTop: '4px' }}>
                Confidence: {predictions.confidence || 'low'}
              </div>
            </div>

            <div style={{
              background: colors.bg,
              padding: '16px',
              borderRadius: '8px',
              border: `2px solid #3b82f6`
            }}>
              <div style={{ fontSize: '12px', color: colors.textSecondary, marginBottom: '8px' }}>
                Predicted Tomorrow Orders
              </div>
              <div style={{ fontSize: '24px', fontWeight: 'bold', color: '#3b82f6' }}>
                {predictions.tomorrowOrders || 0}
              </div>
              <div style={{ fontSize: '11px', color: colors.textSecondary, marginTop: '4px' }}>
                Trend: {predictions.trend || 'stable'}
              </div>
            </div>

            {predictions.surgeWarnings && predictions.surgeWarnings.length > 0 && (
              <div style={{
                background: colors.bg,
                padding: '16px',
                borderRadius: '8px',
                border: `2px solid #ef4444`
              }}>
                <div style={{ fontSize: '12px', color: colors.textSecondary, marginBottom: '8px' }}>
                  ‚ö†Ô∏è Surge Warnings
                </div>
                {predictions.surgeWarnings.map((warning, idx) => (
                  <div key={idx} style={{ fontSize: '13px', color: '#ef4444', marginBottom: '4px' }}>
                    {warning}
                  </div>
                ))}
              </div>
            )}
          </div>
        )}

        {/* 7-Day Trends */}
        {trends && trends.last7Days && trends.last7Days.length > 0 && (
          <div style={{
            background: colors.bg,
            padding: '16px',
            borderRadius: '8px'
          }}>
            <div style={{ fontSize: '14px', fontWeight: '600', marginBottom: '12px', color: colors.textPrimary }}>
              üìä 7-Day Trend: {trends.trend || 'stable'}
            </div>
            <div style={{ display: 'flex', gap: '8px', overflowX: 'auto' }}>
              {trends.last7Days.map((day, idx) => (
                <div key={idx} style={{
                  minWidth: '100px',
                  padding: '12px',
                  background: colors.cardBg,
                  border: `1px solid ${colors.borderColor}`,
                  borderRadius: '6px',
                  textAlign: 'center'
                }}>
                  <div style={{ fontSize: '10px', color: colors.textSecondary, marginBottom: '6px' }}>
                    {new Date(day.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                  </div>
                  <div style={{ fontSize: '16px', fontWeight: 'bold', color: colors.textPrimary }}>
                    {day.orders}
                  </div>
                  <div style={{ fontSize: '10px', color: colors.textSecondary }}>
                    orders
                  </div>
                  <div style={{ fontSize: '12px', color: '#10b981', marginTop: '4px' }}>
                    ${day.cost?.toFixed(2) || '0.00'}
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>

      {/* ZIP Distribution */}
      <div style={{
        background: colors.cardBg,
        border: `1px solid ${colors.borderColor}`,
        borderRadius: '12px',
        padding: '24px'
      }}>
        <h3 style={{
          margin: '0 0 20px 0',
          fontSize: '20px',
          fontWeight: 'bold',
          color: colors.textPrimary,
          display: 'flex',
          alignItems: 'center',
          gap: '10px'
        }}>
          üó∫Ô∏è AICOO ZIP Distribution
        </h3>

        {zipDist.length === 0 ? (
          <div style={{ textAlign: 'center', padding: '40px', color: colors.textSecondary }}>
            No ZIP data yet. Process orders to see distribution.
          </div>
        ) : (
          <div style={{ overflowX: 'auto' }}>
            <table style={{
              width: '100%',
              borderCollapse: 'collapse',
              fontSize: '13px'
            }}>
              <thead>
                <tr style={{ background: colors.bg }}>
                  <th style={{ padding: '12px', textAlign: 'left', borderBottom: `2px solid ${colors.borderColor}` }}>ZIP</th>
                  <th style={{ padding: '12px', textAlign: 'center', borderBottom: `2px solid ${colors.borderColor}` }}>Orders</th>
                  <th style={{ padding: '12px', textAlign: 'center', borderBottom: `2px solid ${colors.borderColor}` }}>Deliveries</th>
                  <th style={{ padding: '12px', textAlign: 'right', borderBottom: `2px solid ${colors.borderColor}` }}>Avg Cost</th>
                  <th style={{ padding: '12px', textAlign: 'center', borderBottom: `2px solid ${colors.borderColor}` }}>Hotness</th>
                </tr>
              </thead>
              <tbody>
                {zipDist.slice(0, 10).map((zip, idx) => (
                  <tr key={idx} style={{
                    borderBottom: `1px solid ${colors.borderColor}`,
                    background: idx % 2 === 0 ? colors.bg : 'transparent'
                  }}>
                    <td style={{ padding: '12px', fontWeight: '600' }}>{zip.zip}</td>
                    <td style={{ padding: '12px', textAlign: 'center' }}>{zip.orders}</td>
                    <td style={{ padding: '12px', textAlign: 'center' }}>{zip.deliveries}</td>
                    <td style={{ padding: '12px', textAlign: 'right', color: '#10b981' }}>
                      ${zip.avgCost?.toFixed(2) || '0.00'}
                    </td>
                    <td style={{ padding: '12px', textAlign: 'center' }}>
                      <span style={{
                        display: 'inline-block',
                        width: '12px',
                        height: '12px',
                        borderRadius: '50%',
                        background: getHotnessColor(zip.hotness)
                      }} />
                      <span style={{ marginLeft: '8px', fontSize: '11px', color: colors.textSecondary }}>
                        {zip.hotness}
                      </span>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )}
      </div>
    </div>
  );
}
